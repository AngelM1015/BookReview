<div class="col-md-6 col-md-offset-3">
  <div class="new-book-form">
<h1>Edit Book</h1>
<%= simple_form_for @book, :html => { :multipart => true } do |f|%>
  <%= f.input :category%>
  <%= f.file_field :book_img %>
  <%= f.input :title, label: "Book Title"%>
  <%= f.input :description %>
  <%= f.input :author %>
  <%= f.button :submit %>
  <% end %>

  <%= form_for @category, do |f|%>
  <%= f.input :name%>
  <%= f.button :submit %>
  <% end %>
</div>
</div>
